{% extends 'admin/admin.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>
    <div class="mb-3">
        <a href="{{ path('app_user_index') }}">Retour a la liste</a>

        {% if 'ROLE_DRH' in user.roles ? user.roles|json_encode : '' %}
            <button class="btn btn-sm btn-success ms-3" data-bs-toggle="modal" data-bs-target="#staticBackdropPersonnel">Mettre en personnel</button>
        {% else %}
            <button class="btn btn-sm btn-primary ms-3" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Mettre en DRH</button>
        {% endif %}

        
        
    </div>

    {{ include('user/_edit_role_drh.html.twig') }}
    {{ include('user/_edit_role_personnel.html.twig') }}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom complet</th>
                <td>{{ user.fullName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                {% if 'ROLE_DRH' in user.roles ? user.roles|json_encode : '' %}
                    <td><span class="badge rounded-pill text-bg-primary">DRH</span></td>
                {% else %}
                    <td><span class="badge rounded-pill text-bg-success">Personnel</span></td>
                {% endif %}
            </tr>
        </tbody>
    </table>
{% endblock %}
