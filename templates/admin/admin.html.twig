<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        
        <link rel="stylesheet" href="{{ asset('styles/style.css') }}">
        <!-- Inclure Bootstrap CSS -->
        <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css') }}">
        
        <!-- Inclure fontawesome -->
        <link rel="stylesheet" href="{{ asset('icons/css/all.min.css') }}">

        <link href="{{asset('vendor/bootstrap-icons/bootstrap-icons.css')}}" rel="stylesheet">


        <!-- Vendor CSS Files -->
        <link href="{{asset('vendor/bootstrap/css/bootstrap.min.css')}}" rel="stylesheet">
        <link href="{{asset('vendor/simple-datatables/style.css')}}" rel="stylesheet">

        <!-- Template Main CSS File -->
        <link href="{{asset('css/style.css')}}" rel="stylesheet">

        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>

        <!-- Inclure Bootstrap JS -->
        <script src="{{ asset('bootstrap/js/bootstrap.bundle.min.js') }}"></script>
        <script src="{{asset('vendor/simple-datatables/simple-datatables.js')}}"></script>


        <!-- Template Main JS File -->
        <!-- ======= Header ======= -->
        <header id="header" class="header fixed-top d-flex align-items-center">

          <div class="d-flex align-items-center justify-content-between">
            <a href="index.html" class="logo d-flex align-items-center">
              <span class="d-none d-lg-block">Fonction Public</span>
            </a>
            {# <i class="bi bi-list toggle-sidebar-btn"></i> #}
          </div><!-- End Logo -->


          <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">

              <li class="nav-item pe-3">

                <div class="nav-profile d-flex align-items-center pe-0">
                  <i class="fa-solid fa-user"></i>
                  <span class="d-none d-md-block ps-2">{{ app.user.fullName }}</span>
                </div><!-- End Profile Iamge Icon -->

                <a class="d-flex align-items-center justify-content-center text-center" href="{{ path('app_logout') }}">
                    <i class="bi bi-box-arrow-right text-danger"></i>
                    <span class='text-danger'>Deconnexion</span>
                  </a>
              </li><!-- End Profile Nav -->          

            </ul>
          </nav><!-- End Icons Navigation -->

        </header><!-- End Header -->

        <!-- ======= Sidebar ======= -->
        <aside id="sidebar" class="sidebar">

          <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
              <a class="nav-link fw-bold {% if path('app_dashboard') in app.request.uri %} active {% endif %}" href="{{ path('app_dashboard') }}">
                <i class="bi bi-grid-fill"></i>
                <span>Tableau de bord</span>
              </a>
            </li>

            <li class="nav-item">
              <a class="nav-link fw-bold {% if path('app_job_index') in app.request.uri %} active {% endif %}" href="{{ path('app_job_index') }}">
                <i class="bi bi-front"></i>
                <span>Fonction</span>
              </a>
            </li>
{#             
            <li class="nav-item">
              <a class="navi-link " href="{{ path('app_job_index') }}">
                <i class="bi bi-grid"></i>
                <span>Fonction</span>
              </a>
            </li> #}
            
            <li class="nav-item">
              <a class="nav-link fw-bold {% if path('app_agent_index') in app.request.uri %} active {% endif %}" href="{{ path('app_agent_index') }}">
                <i class="bi bi-people-fill"></i>
                <span>Agents</span>
              </a>
            </li>
            
            <li class="nav-item">
              <a class="nav-link fw-bold {% if path('app_affectation_index') in app.request.uri %} active {% endif %}" href="{{ path('app_affectation_index') }}">
                <i class="bi bi-pin-map-fill"></i>
                <span>Affectation</span>
              </a>
            </li>
            
            <li class="nav-item">
              <a class="nav-link fw-bold {% if path('app_candidat_index') in app.request.uri %} active {% endif %}" href="{{ path('app_candidat_index') }}">
                <i class="bi bi-people"></i>
                <span>Candidats</span>
              </a>
            </li>
            
            <li class="nav-item">
              <a class="nav-link fw-bold {% if path('app_user_index') in app.request.uri %} active {% endif %}" href="{{ path('app_user_index') }}">
                <i class="bi bi-people-fill"></i>
                <span>Utilisateurs</span>
              </a>
            </li>

          </ul>

        </aside><!-- End Sidebar-->

        <main id="main" class="main">

              {% block body %}
              
              {% endblock %}

        </main><!-- End #main -->

          <!-- Template Main JS File -->
        <script src="{{asset('js/main.js')}}"></script>
    </body>
</html>

  