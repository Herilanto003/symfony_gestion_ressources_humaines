{% extends 'admin/admin.html.twig' %}

{% block title %}Agent{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Les fonctionnaires</h1>
        <a href="{{ path('app_agent_new') }}" class="btn btn-sm btn-primary">Nouveau</a>
    </div>

    <table class="table datatable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telephone</th>
                <th>Fonction Actuelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for agent in agents %}
            <tr>
                <td>{{ agent.id }}</td>
                <td>{{ agent.lastname }}</td>
                <td>{{ agent.firstname }}</td>
                <td>{{ agent.phone }}</td>
                <td>{{ agent.job.title }}</td>
                <td>

                    <a href="{{ path('app_agent_show', {'id': agent.id}) }}" class="btn btn-info">
                        <i class="bi bi-eye-fill"></i>
                    </a>
                    <a href="{{ path('app_agent_edit', {'id': agent.id}) }}" class="btn btn-primary"><i class="bi bi-pen-fill"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="19">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
