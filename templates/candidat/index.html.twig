{% extends 'admin/admin.html.twig' %}

{% block title %}Candidat index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Les candidats</h1>
        <a href="{{ path('app_candidat_new') }}" class="btn btn-sm btn-primary">Nouveau</a>
    </div>

    <table class="table datatable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telephone</th>
                <th>Fonction demandee</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for candidat in candidats %}
            <tr>
                <td>{{ candidat.id }}</td>
                <td>{{ candidat.lastname }}</td>
                <td>{{ candidat.firstname }}</td>
                <td>{{ candidat.phone }}</td>
                <td>{{ candidat.job.title }}</td>
                <td>

                    <a href="{{ path('app_candidat_show', {'id': candidat.id}) }}" class="btn btn-info">
                        <i class="bi bi-eye-fill"></i>
                    </a>
                    <a href="{{ path('app_candidat_edit', {'id': candidat.id}) }}" class="btn btn-primary"><i class="bi bi-pen-fill"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
